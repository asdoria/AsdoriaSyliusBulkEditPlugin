<h5 class="ui header">{{ 'sylius.ui.options'|trans }}</h5>
<div class="ui divided selection list">
    {% set options = options_by_variant(variant) %}
    {% for option in options %}
        <a class="item" href="{{ path('sylius_admin_product_option_update', {'id' : option.id }) }}">
            <div class="ui horizontal label">{{ option.name }}</div>
            {{ variant.getOptionValues()|filter(v => option.hasValue(v))|map(p => "#{p.code}")|join(' | ') }}
        </a>
    {% endfor %}
</div>

