{% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}

<div class="ui styled fluid accordion" style="width: 600px;">
    <div class="title">
        <i class="dropdown icon"></i>
        <i class="edit icon"></i>
        {{ 'sylius.ui.actions'| trans }}
    </div>
    <div class="content ">
        <form class="ui form">
            <input type="hidden" name="resources" class="bulk-select-checkbox-target">
            <div
                id="js-asdoria-bulk-edit-action-steps"
                data-url="{{ path('asdoria_bulk_edit_admin_ajax_step', {context: options.link.parameters.context|default('product')}) }}"
                data-loading="{{ 'asdoria_bulk_edit.ui.loading'|trans }}"
                data-confirmation="{{ 'asdoria_bulk_edit.ui.confirmation'|trans }}"
                data-validate-choice="{{ 'asdoria_bulk_edit.ui.please_to_validate_choice'|trans }}"
                data-confirmation-success="{{ 'asdoria_bulk_edit.ui.confirmation_success'|trans }}"
                data-error-message="{{ 'asdoria_bulk_edit.ui.error_process'|trans }}"
            ></div>
        </form>
    </div>
</div>
